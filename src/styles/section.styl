.section
  font-size: 1rem
  display: flex

  margin-top: emCalc(400)

  @media $mediaQueryBig
    margin-top: emCalc(100)

  &--date
    justify-content: center
    width: auto
    flex-grow: 1
    margin-top: emCalc(500)

    @media $mediaQueryBig
      margin-top: emCalc(80)

    .section__content
      width: auto

    .section__title
      text-align: center

  &--coc
    justify-content: center

  &__content
    width: 100%
    text-align: center

    @media $mediaQuerySmall
      text-align: left

    @media $mediaQueryBig
      width: 50%

  &__title
    font-size: emCalc(40, 11)

    margin-bottom: emCalc(20, 40)

    font-weight: 100
    text-transform: uppercase
    text-align: center

    @media $mediaQuerySmall
      font-size: emCalc(40)

    @media $mediaQueryBig
      text-align: left
      font-size: emCalc(40)

    .bold
      font-weight: 800

    .light
      font-weight: 100
      text-transform: none

    @media $mediaQuerySmall
      font-size: emCalc(60)

  &__subtitle
    font-size: emCalc(32)
    font-weight: 400
    line-height: 2

  &__copy
    font-size: emCalc(24)
    line-height: 1.6

    @media $mediaQuerySmall
      font-size: emCalc(18)
      line-height: 2
      margin-bottom: emCalc(24, 18)
